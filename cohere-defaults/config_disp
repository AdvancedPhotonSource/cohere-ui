// PARAMETERS FOR VISUALISATION
results_dir = "ANLDIR"
                           // optional, a directory of off which all results will be
                           // visualized. Default is the experiment directory
rampups = 1
                           // optional, upsize when running ramp removal
                           // default is 1

crop = [.5, .5, .5]
                           // fractions of the image array dimensions assigned to cropped array dimensions
                           // default [1.0, 1.0, 1.0] meaning the whole array

make_twin = False
                           // switch to whether visualize twin image
